@using Service.Helpers;
@using System.Globalization;
@using Domain.Constant;
@using Domain.Enums;
@using Domain.Extentions;
@using Domain.Models.ResponseModel;
@using Seafood.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var masterDataHelper = new MasterDataHelper();
    var listSeafoodPromotion = masterDataHelper.GetListSeafoodPromotion();
    var address = (Addresse)ViewBag.Address;

    UserData user = null;
    List<Voucher> vouchers = new List<Voucher>();
    try
    {
        var httpContextBase = new HttpContextWrapper(HttpContext.Current);
        user = Seafood.MemCached.Authenticator.CurrentUser(httpContextBase);
        if (user != null)
        {
            vouchers = masterDataHelper.GetVoucherByUserId(user.UserId);
        }
    }
    catch
    {

    }
}
@model List<Basket>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/css/demo/basket.css" rel="stylesheet" />
    <style>

        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 10000; /* Sit on top */
            padding-top: 100px; /* Location of the box */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
            flex-flow: row;
            justify-content: center;
        }

            .modal .modal-dialog {
                width: auto;
            }

                .modal .modal-dialog .modal-content {
                    padding-top: 20px;
                    width: 100%;
                    max-width: 450px;
                }

                    .modal .modal-dialog .modal-content .container-voucher-active {
                        border: 5px dotted #5cb85c !important;
                    }

                    .modal .modal-dialog .modal-content .container-voucher {
                        border: 5px dotted #bbb;
                        width: 90%;
                        border-radius: 15px;
                        margin: 0 auto;
                        max-width: 400px;
                        margin-bottom: 15px;
                        /*font-family: Arial;*/
                    }

                        .modal .modal-dialog .modal-content .container-voucher .head {
                            border-radius: 10px 10px 0 0;
                            padding: 2px 16px;
                            background-color: #dee8fc;
                            display: flex;
                            flex-flow: row;
                            justify-content: center;
                        }

