@using Domain.Constant;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/css/demo/layout-account-manager.css" rel="stylesheet" />
    <style>
        .container-layout-account-manager {
            margin-top:50px;
            color: #4a4a4a;
            font-size: 1em;
            font-weight: 400;
            line-height: 1.5;
            width: 100%;
            max-width: 1100px;
            margin-left: auto;
            margin-right: auto;
            padding: 0 5px 0 5px;
        }
        .box-your-account {
            display: flex;
            -webkit-box-align: center;
            align-items: center;
            padding-left: 7px;
            margin: 0px 0px 12px;
        }
            .box-your-account img {
                width: 45px;
                margin: 0px 12px 0px 0px;
                border-radius: 50%;
            }
            .box-your-account .info {
                flex: 1 1 0%;
                font-size: 13px;
                line-height: 15px;
                color: rgb(51, 51, 51);
                font-weight: 300;
            }
                .box-your-account .info strong {
                    font-size: 16px;
                    line-height: 19px;
                    font-weight: 400;
                    display: block;
                    margin: 4px 0px 0px;
                }

        .box-list-manager {
            display: flex;
            flex-flow:column;
        }
            .box-list-manager .item {
                display: flex;
                flex-flow: column;
                gap: 5px;
                color: black;
                width: 250px;
                padding: 5px 0 5px 0;
            }

                .box-list-manager .item .active {
                    background-color: #dee8fc;
                }

                .box-list-manager .item .item-content {
                    cursor: pointer;
                    padding: 7px 15px 7px 15px;
                    display: flex;
                }

                    .box-list-manager .item .item-content:hover {
                        background-color: #dee8fc;
                    }

                    .box-list-manager .item .item-content i {
                        font-size: 20px;
                        margin-right: 10px;
                        margin-bottom: -5px;
                    }

                    .box-list-manager .item .item-content span {
                        margin-left: 5px;
                        margin-top: 1px;
                        font-size: 11px;
                        font-weight: 400;
                        color: white;
                        text-align: center;
                        width: 22px;
                        height: 17px;
                        background-color: #d70018;
                        display: flex;
                        -webkit-box-pack: center;
                        justify-content: center;
                        -webkit-box-align: center;
                        align-items: center;
                        border-radius: 40%;
                    }

                    .box-list-manager .item .item-content .icon-address {
                        color: #d70018;
                    }
                    .box-list-manager .item .item-content .icon-heart {
                        color: #d70018;
                    }

        /*ghi đè class*/
    </style>
</head>
<body>
    <div class="container-layout-account-manager">
        <div class="row">
            <div class="col-md-3 col-sm-12 menu">
                <div class="box-your-account">
                    <img src="https://salt.tikicdn.com/desktop/img/avatar.png" alt="avatar">
                    <div class="info">
                        Tài khoản của
                        <strong>Phạm Văn Đức</strong>
                    </div>
                </div>
                <div class="box-list-manager">
                    <div class="item">
                        <div id="@Constant.Id_Thong_Bao_Cua_Toi" class="item-content">
                            <i class='icon-address far fa-bell'></i>
                            <div>@Constant.Name_Thong_Bao_Cua_Toi</div>
                            <span>1</span>
                        </div>
                        <div id="@Constant.Id_Thong_Tin_Tai_Khoan" class="item-content">
                            <i class='fas fa-address-card'></i>
                            <div>@Constant.Name_Thong_Tin_Tai_Khoan</div>
                        </div>
                        <div id="@Constant.Id_So_Dia_Chi" class="item-content">
                            <i class='fas fa-map-marker-alt'></i>
                            <div>@Constant.Name_So_Dia_Chi</div>
                        </div>
                        <div id="@Constant.Id_San_Pham_Yeu_Thich" class="item-content">
                            <i class='icon-heart far fa-heart'></i>
                            <div>@Constant.Name_San_Pham_Yeu_Thich</div>
                        </div>
                        <div id="@Constant.Id_Lich_Su_Mua_Hang" class="item-content">
                            <i class="fa-solid fa-notes-medical"></i>
                            <div>@Constant.Name_Lich_Su_Mua_Hang</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9 col-sm-12">
               @RenderBody()
            </div>
        </div>
    </div>
    <script>
        //Setup
        $(document).ready(function () {
            document.getElementById('@Constant.Id_Thong_Bao_Cua_Toi').classList.remove('active');
            document.getElementById('@Constant.Id_Thong_Tin_Tai_Khoan').classList.remove('active');
            document.getElementById('@Constant.Id_So_Dia_Chi').classList.remove('active');
            document.getElementById('@Constant.Id_San_Pham_Yeu_Thich').classList.remove('active');
            document.getElementById('@Constant.Id_Lich_Su_Mua_Hang').classList.remove('active');
            var element = document.getElementById('@ViewBag.IdItem');
            element.classList.add('active');
        });
        //Setup
        $('.item-content').click(function (e)
        {
            showLoadingPage(5000);
            var dom = this;
            window.location = "/Address/AddressList?idItem=" + dom.id;
        });
    </script>
</body>
</html>


