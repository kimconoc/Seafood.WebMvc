@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/css/demo/order.css" rel="stylesheet" />
    <style>
        .container-oder {
            color: #4a4a4a;
            font-size: 1em;
            font-weight: 400;
            line-height: 1.5;
            width: 100%;
            max-width: 1100px;
            margin-left: auto;
            margin-right: auto;
            padding: 0 5px 0 5px;
        }
        .menu-tab-order {
            display: inline-block;
            width: 100%;
        }
            .menu-tab-order li a {
                /*color: rgb(7, 171, 226);*/
                background-color: white;
                margin-bottom: 5px;
            }

        .box-search-order {
            margin-top: 10px;
            background-color: white;
            display: flex;
            transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s, -webkit-box-shadow 0.15s ease-in-out 0s;
            height: 36px;
            width: 100%;
            border-radius: 4px;
            outline: none;
            border: 1px solid rgb(196, 196, 207);
            justify-content: space-between;
        }
            .box-search-order i {
                width:auto;
                font-size:20px;
                padding:8px 0 8px 12px;
            }
            .box-search-order input {
                flex: 1;
            }
            .box-search-order div {
                background-color:rgb(196, 196, 207);
                width: 1px;
                height: 80%;
                margin: 4px 10px 0 0;
            }
            .box-search-order label {
                width: auto;
                font-weight: 500;
                color: rgb(7, 171, 226);
                cursor: pointer;
                width: auto;
                font-size: 15px;
                padding: 10px 15px 8px 0;
            }

        .box-prod-order {
            margin-top:12px;
            background: rgb(255, 255, 255);
            border-radius: 4px;
            font-size: 13px;
            margin-bottom: 20px;
            padding: 16px;
        }
            .box-prod-order .status-prod {
                border-bottom: 1px solid rgb(235, 235, 240);
                padding-bottom: 12px;
                color: rgb(128, 128, 137);
                font-size: 14px;
                font-weight: 500;
                line-height: 20px;
            }
                .box-prod-order .status-prod .main-status {
                    margin-left:5px;
                    font-size: 15px;
                    font-weight: 600;
                }
            .box-prod-order .product {
                display: flex;
                flex-direction: row;
                padding: 16px 0px;
                border-bottom: 1px solid rgb(235, 235, 240);
                -webkit-box-pack: justify;
                justify-content: space-between;
            }
                .box-prod-order .product .detail {
                    display: flex;
                    gap:10px;
                }
                .box-prod-order .product .prod-price {
                    font-size:15px;
                }
                    .box-prod-order .product .detail .quantity {
                        position: relative;
                    }
                    .box-prod-order .product .detail .quantity img {
                        flex-shrink: 0;
                        width: 80px;
                        height: 80px;
                        border-radius: 4px;
                        border: 0.5px solid rgb(238, 238, 238);
                        background-repeat: no-repeat;
                        background-size: 90%;
                        background-position: center center;
                        position: relative;
                    }

                        .box-prod-order .product .detail .quantity span {
                            font-size: 12px;
                            line-height: 16px;
                            font-weight: 400;
                            color: rgb(7, 171, 226);
                            text-align: center;
                            position: absolute;
                            width: 28px;
                            height: 28px;
                            background-color: rgb(235, 235, 240);
                            display: flex;
                            -webkit-box-pack: center;
                            justify-content: center;
                            -webkit-box-align: center;
                            align-items: center;
                            right: 0px;
                            bottom: 0px;
                            border-top-left-radius: 10px;
                        }
            .box-prod-order .total-price {
                /*Đưa vào cuối hàng*/
                display: flex;
                flex-flow: column;
                align-items: flex-end;
                margin-top: 12px;
                width: 100%;
            }
                .box-prod-order .total-price .content {
                    display: flex;
                    gap: 5px;
                    margin-bottom: 8px;
                }
                .box-prod-order .total-price .click-continue {
                    display: flex;
                }
                .box-prod-order .total-price .content span {
                    font-size: 16px;
                }

                .box-prod-order .total-price .content strong {
                    font-size: 16px;
                    color: #d70018;
                }

                .box-prod-order .total-price .click-continue button {
                    padding: 12px 8px;
                    height: 36px;
                    border-radius: 4px;
                    border: 1px solid rgb(7, 171, 226);
                    font-size: 14px;
                    font-weight: 400;
                    line-height: 1.4;
                    color: rgb(7, 171, 226);
                    display: flex;
                    -webkit-box-pack: center;
                    justify-content: center;
                    -webkit-box-align: center;
                    align-items: center;
                    cursor: pointer;
                    margin-left: 8px;
                }

        /*ghi đè class*/
        /*slick-slide*/
        .nav-pills > li.active > a, .nav-pills > li.active > a:focus, .nav-pills > li.active > a:hover {
            color: rgb(7, 171, 226);
            background-color: #dee8fc !important;
        }
        .nav-tabs {
             border-bottom: none; 
        }
    </style>
</head>

<body>
    <div class="container-oder">
        <div class="main-title">
            <h1>GIỎ HÀNG</h1>
        </div>
        <div class="slim-line">
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-12 menu">
                <h3 style="margin-top:10px;">Quản lý đơn hàng</h3>
                <ul class="menu-tab-order nav nav-pills nav-stacked nav nav-tabs">
                    <li class="active"><a href="#all_order">Tất cả đơn</a></li>
                    <li><a href="#order_processing">Đang xử lý</a></li>
                    <li><a href="#order_shiping">Đang vận chuyển</a></li>
                    <li><a href="#order_delivered">Đơn đã giao</a></li>
                    <li><a href="#order_canceled">Đơn đã hủy</a></li>
                </ul>
            </div>

            <div class="col-md-9 col-sm-12">
                <div id="box_search_order" class="box-search-order">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input id="box_search_order_input" placeholder="Tìm đơn hàng theo Mã đơn hàng hoặc tên sản phẩm" />
                    <div></div>
                    <label>
                        Tìm đơn hàng
                    </label>
                </div>
                <div class="tab-content">
                    <div id="all_order" class="tab-pane fade in active">
                        <div class="box-prod-order">
                            <div class="status-prod">
                                <i class="fa fa-truck" aria-hidden="true"></i>
                                <span class="main-status">Đang vận chuyển</span>
                            </div>
                            <div class="product">
                                <div class="detail">
                                    <div class="quantity">
                                        <img src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/4/h/4h43.png" alt="Alternate Text" />
                                        <span>x2</span>
                                    </div>
                                    <div>
                                        <div class="name-prod">
                                            <strong>Loại tôm 1kg 40</strong>
                                        </div>
                                        <span>
                                            Chế biến lẩu
                                        </span>
                                    </div>
                                </div>
                                <span class="prod-price">
                                    210.000 đ
                                </span>
                            </div>
                            <div class="product">
                                <div class="detail">
                                    <div class="quantity">
                                        <img src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/4/h/4h43.png" alt="Alternate Text" />
                                        <span>x1</span>
                                    </div>
                                    <div>
                                        <div class="name-prod">
                                            <strong>Loại tôm 1kg 40</strong>
                                        </div>
                                        <span>
                                            Chế biến nướng
                                        </span>
                                    </div>
                                </div>
                                <span class="prod-price">
                                    210.000 đ
                                </span>
                            </div>
                            <div class="total-price">
                                <div class="content">
                                    <span>
                                        Tổng tiền:
                                    </span>
                                    <strong>
                                        459.000 đ
                                    </strong>
                                </div>
                                <div class="click-continue">
                                    <button>Mua lại</button>
                                    <button>Xem Chi tiết</button>
                                </div>
                            </div>
                        </div>
                        <div class="box-prod-order">
                            <div class="status-prod">
                                <i class="fa fa-ban" aria-hidden="true"></i>
                                <span class="main-status">Đã hủy</span>
                            </div>
                        </div>
                    </div>
                    <div id="order_processing" class="tab-pane fade">
                        <div class="box-prod-order">
                            <div class="status-prod">
                                <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                                <span class="main-status">Đang xử lý</span>
                            </div>
                        </div>
                    </div>
                    <div id="order_shiping" class="tab-pane fade">
                        <div class="box-prod-order">
                            <div class="status-prod">
                                <i class="fa fa-truck" aria-hidden="true"></i>
                                <span class="main-status">Đang vận chuyển</span>
                            </div>
                        </div>
                    </div>
                    <div id="order_delivered" class="tab-pane fade">
                        <div class="box-prod-order">
                            <div class="status-prod">
                                <i class="fa fa-check-square-o" aria-hidden="true"></i>
                                <span class="main-status">Giao hàng thành công</span>
                            </div>
                        </div>
                    </div>
                    <div id="order_canceled" class="tab-pane fade">
                        <div class="box-prod-order">
                            <div class="status-prod">
                                <i class="fa fa-ban" aria-hidden="true"></i>
                                <span class="main-status">Đã hủy</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        //Setup
        //Setup
        $(document).ready(function () {
            $(".nav-tabs a").click(function () {
                $(this).tab('show');
            });
        });
        $('#box_search_order_input').on('focus', function () {
            document.getElementById("box_search_order").style.borderColor = "rgb(7, 171, 226)";
        });
        $('#box_search_order_input').on('blur', function () {
            document.getElementById("box_search_order").style.borderColor = "rgb(196, 196, 207)";
        });
    </script>           
</body>
</html>
