
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Domain.Models.ResponseModel.ProdDetailt
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/css/demo/detailt.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick-theme.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <style>

        .block-box-price{

        }
        .box-info__installment {
            width: fit-content;
            padding: 4px 5px;
            font-size: 12px;
            border-radius: 5px;
            border: 1px solid #d70018;
            background-color: #fef2f2;
            color: #d70018;
            margin-bottom: 10px !important;
        }
        .box-info__box-price {
            display: flex;
            flex-wrap: wrap;
            align-items: flex-end;
        }
        .product__price--show {
            display: inline-block;
            margin-bottom: 10px !important;
            font-size: 18px;
            font-weight: 700;
            line-height: 1.1;
            color: #d70018;
        }

        .product__price--through {
            display: inline-block;
            margin: 0 0 10px 10px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: line-through;
            color: #707070;
            position: relative;
            top: 2px;
        }

        .list-linked {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .linked-undefined {
            width: calc(33.33333% - 6.66667px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin: 0 0 10px;
            padding: 5px 4px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            background: #fff;
            font-size: 12px;
            text-decoration: none;
            color: #444;
            position: relative;
            overflow: hidden;
            cursor: pointer;
            grid-gap: 3px;
            gap: 3px;
        }

        .active {
            content: "✓";
            width: 18px;
            height: 13px;
            border-radius: 0 0 10px 0;
            background-color: #3b5898;
            color: #fff;
            font-size: 10px;
            padding-left: 4px;
            padding-bottom: 15px;
            position: absolute;
            top: 0;
            left: 0;
        }

        .box-product-promotion {
            border-radius: 10px;
            overflow: hidden;
            border: 1px solid #3b5898;
        }

        .box-product-promotion-header {
            grid-gap: 10px;
            gap: 10px;
            height: 42px;
            background-color: #dee8fc;
            color: #3b5898;
            display: flex;
            padding: 10px;
            font-weight: 500;
            text-align: center;
        }
            .box-product-promotion-header h1 {
                margin: 2px 10px 0 0;
                font-size: 18px;
                font-weight: 700;
                overflow: hidden;
            }
            .box-product-promotion-header i {
                font-size: 22px;
                font-weight: 700;
                overflow: hidden;
            }

        .box-product-promotion-content {
            min-height: fit-content;
            transition: min-height 1s ease;
            padding: 15px 10px 15px 10px;
            display:flex;
            gap:5px;
        }

        .box-product-promotion-number {
            width: 15px;
            height: 15px;
            text-align: center;
            font-size: 10px;
            border-radius: 50%;
            font-weight: 600;
            background-color: #3b5898;
            color: white;
        }
        .box-product-promotion-detail {
            width: calc(100% - 25px);
            font-size: 14px;
        }

        .order-add-to-cart {
            margin-top: 10px;
            display: flex !important;
            justify-content: space-between !important;
        }

            .order-add-to-cart button {
                text-align: center;
                align-items: center;
                width: calc(100% - 70px);
                height: 60px;
                background: linear-gradient(#3b5898,#3b5898);
                color: #fff;
                border-radius: 10px;
                outline: none;
                border: none;
                margin-bottom: 10px;
                flex-direction: column;
                padding-top: 10px;
            }
                .order-add-to-cart button strong {
                    font-size: 16px;
                }
                .order-add-to-cart button span {
                    font-size: 14px;
                    position: relative;
                    display: block;
                }

        .add-to-cart-button {
            height: 60px;
            width: 60px;
            border: 2px solid #3b5898;
            background-color: unset;
            border-radius: 10px;
            flex-direction: column;
            justify-content: center;
            text-align: center;
            white-space: nowrap;
            cursor: pointer;
        }

            .add-to-cart-button i {
                margin-top:10px;
                font-size: 25px;
                color: #3b5898;
            }
            .add-to-cart-button div {
                font-size: 7.5px;
                margin: 0;
                padding:0;
                color: #3b5898;
                font-weight: 600;
            }
        /*ghi đè class*/
        /*slick-slide*/
        .slick-slide img {
            width: 100%;
        }        

        .slick-next:before, .slick-prev:before {
            font-size: 20px;
            line-height: 1;
            opacity: .75;
            color: #3b5898;
        }

        .slick-next:before {
            margin-left: -15px;
        }

        .slick-prev:before {
            margin-right: -13px;
        }

    </style>
</head>

<body>
    <div class="body-detailt">
        <div class="prod-name">
            <h1>Tôm chiên trắng (loại 1 kg 50 con)</h1>
            @if (Model != null)
            {
                if (Model.ReviewProd == null || Model.ReviewProd == 0)
                {
                    <h6>Chưa có đánh giá</h6>
                }
                else if (Model.ReviewProd == 1)
                {
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                }
                else if (Model.ReviewProd == 1.5)
                {
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star-half-stroke"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                }
                else if (Model.ReviewProd == 2)
                {
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                }
                else if (Model.ReviewProd == 2.5)
                {
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star-half-stroke"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                }
                else if (Model.ReviewProd == 3)
                {
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                }
                else if (Model.ReviewProd == 3.5)
                {
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star-half-stroke"></i>
                    <i class="fa-regular fa-star"></i>
                }
                else if (Model.ReviewProd == 4)
                {
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                }
                else if (Model.ReviewProd == 4.5)
                {
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star-half-stroke"></i>
                }
                else if (Model.ReviewProd >= 5)
                {
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                }
            }
            else
            {
                <h6>Chưa có đánh giá</h6>
            }
        </div>
        <div class="slim-line">

        </div>
        <div class="prod-detailt-main row">
            <div class="col-md-4 col-sm-12 menu">
                <div class="prod-detailt-main-img slider slider-for">
                    <div>
                        <img src="~/assets/images/oyster.png" alt="Alternate Text" />
                    </div>
                    <div>
                        <img src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/4/h/4h43.png" alt="Alternate Text" />
                    </div>
                    <div>
                        <img src="~/assets/images/crab.jpg" alt="Alternate Text" />
                    </div>
                    <div>
                        <img src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/4/h/4h43.png" alt="Alternate Text" />
                    </div>
                    <div>
                        <img src="~/assets/images/logos/r-logo_login.jpg" alt="Alternate Text" />
                    </div>
                </div>
                <div style="margin-top: -10px; margin-left: -10px; cursor: pointer;" class="slider slider-nav">
                    <div>
                        <img src="~/assets/images/oyster.png" alt="Alternate Text" />
                    </div>
                    <div>
                        <img src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/4/h/4h43.png" alt="Alternate Text" />
                    </div>
                    <div>
                        <img src="~/assets/images/crab.jpg" alt="Alternate Text" />
                    </div>
                    <div>
                        <img src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/4/h/4h43.png" alt="Alternate Text" />
                    </div>
                    <div>
                        <img src="~/assets/images/logos/r-logo_login.jpg" alt="Alternate Text" />
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-12">
                <div class="block-box-price">
                    <div class="box-info__installment">
                        Ưu đãi 10%
                    </div>
                    <div class="box-info__box-price">
                        <div class="product__price--show">
                            1.235.000 đ
                        </div>
                        <div class="product__price--through">
                            1,111,500 đ
                        </div>
                    </div>
                </div>
                <div class="list-linked">
                    <div style="border: 1px solid #3b5898; " class="linked-undefined">
                        <strong>Để nguyên</strong>
                        <div class="active">
                            ✓
                        </div>
                    </div>
                    <div class="linked-undefined">
                        <strong>chế biến sẵn </strong>
                        <span>+ 30.000 đ</span>
                    </div>
                    <div class="linked-undefined">
                        <strong>Theo yêu cầu</strong>
                        <span>liên hệ</span>
                    </div>
                </div>
                <div class="box-product-promotion">
                    <div class="box-product-promotion-header">
                        <i class="fa-solid fa-gift"></i>
                        <h1>Khuyến mãi</h1>
                    </div>
                    <div class="box-product-promotion-content">
                        <div class="box-product-promotion-number">
                            1
                        </div>
                        <div class="box-product-promotion-detail">
                            box-product-promotion-detail box-product-promotion-detail box-product-promotion-detail box-product-promotion-detail
                        </div>
                    </div>
                    <div class="box-product-promotion-content">
                        <div class="box-product-promotion-number">
                            2
                        </div>
                        <div class="box-product-promotion-detail">
                            box-product-promotion-detail box-product-promotion-detail box-product-promotion-detail box-product-promotion-detail
                        </div>
                    </div>
                </div>
                <div class="order-add-to-cart">
                    <button>
                        <strong>MUA NGAY</strong> <br />
                        <span>(Giao tận nơi hoặc lấy tại cửa hàng)</span>
                    </button>
                    <div class="add-to-cart-button">
                        <i class="fa-solid fa-cart-plus"></i>  <br />
                        <div>Thêm vào giỏ</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-12">
            </div>
        </div>
    </div>
    <script>
        $('.slider-for').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true,
            asNavFor: '.slider-nav'
        });
        $('.slider-nav').slick({
            slidesToShow: 3,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            dots: true,
            focusOnSelect: true
        });

        $('a[data-slide]').click(function (e) {
            e.preventDefault();
            var slideno = $(this).data('slide');
            $('.slider-nav').slick('slickGoTo', slideno - 1);
        });
    </script>
</body>
</html>
