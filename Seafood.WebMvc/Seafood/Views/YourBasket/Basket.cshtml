    <script>
        //Setup
        $(function () {

            $("[data-toggle=popover]").popover({
                html: true,
                content: function (e) {
                    var content = $(this).attr("data-popover-content");
                    return $(content).children(".popover-body").html();
                },
                title: function (e) {
                    var title = $(this).attr("data-popover-content");
                    return $(title).children(".popover-heading").html();
                }
            });

        });

        $('.prod-promotion-popover').click(function (e) {
            e.preventDefault(); return true;
        });
        //Setup

        $('.checkbox-fake').click(function (e)
        {
            var dom = this;
            if (dom.id == "checkbox_all_item")
            {
                for (var i = 1; i <= 3; i++)
                {
                    var id = "checkbox" + i;
                    const elementById = document.getElementById(id);
                    if (dom.innerText == "✓")
                    {
                        elementById.innerText = "";
                        elementById.style.backgroundColor = "transparent" 
                    }
                    else
                    {
                        elementById.innerText = "✓";
                        elementById.style.backgroundColor = "rgb(7, 171, 226)"
                    }
                }
            }
            else
            {
                if (dom.innerText == "")
                {
                    dom.innerText = "✓";
                    dom.style.backgroundColor = "rgb(7, 171, 226)"
                }
                else {
                    dom.innerText = "";
                    dom.style.backgroundColor = "transparent"
                }
            }
            var checkFull = 0;
            const elementcheckbox_all_item = document.getElementById("checkbox_all_item");
            for (var i = 1; i <= 3; i++)
            {
                var id = "checkbox" + i;
                const elementById = document.getElementById(id);
                if (elementById.innerText == "✓")
                {
                    checkFull = checkFull + 1;
                }
            }
            if (checkFull == 3)
            {
                elementcheckbox_all_item.innerText = "✓";
                elementcheckbox_all_item.style.backgroundColor = "rgb(7, 171, 226)"
            }
            else
            {
                elementcheckbox_all_item.innerText = "";
                elementcheckbox_all_item.style.backgroundColor = "transparent"
            }
        });

        $('.box-more-promotion-title div span').click(function (e) {
            var dom = this;
            if (dom.innerHTML.indexOf('Mở rộng') >= 0)
            {
                dom.innerText = "Thu lại";
                const element = document.getElementById("showSeafoodPromotion_icon");
                element.className = "fa fa-angle-double-up";
            }
            else
            {
                dom.innerText = "Mở rộng";
                const element = document.getElementById("showSeafoodPromotion_icon");
                element.className = "fa fa-angle-double-down";
            }
        });
    </script>
