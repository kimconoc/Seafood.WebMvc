@using Service.Helpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var masterDataHelper = new MasterDataHelper();
    var listSeafoodPromotion = masterDataHelper.GetListSeafoodPromotion();
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/css/demo/basket.css" rel="stylesheet" />
    <style>
        .body-detailt {
            color: #4a4a4a;
            font-size: 1em;
            font-weight: 400;
            line-height: 1.5;
            width: 100%;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            padding: 0 5px 0 5px;
            
        }

        .main-title {
            display: flex !important;
            align-items: center !important;
        }

            .main-title h1 {
                color: rgb(7, 171, 226);
                margin: 0 10px 0 0;
                font-size: 18px;
                font-weight: 600;
                line-height: 2;
                display: -webkit-box;
                -webkit-line-clamp: 3;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }

            .main-title i {
                font-size: 14px;
                color: #f59e0b;
                margin: 0 5px 0 0;
            }

        .basket-detailt-main {
            margin-top: 10px;
        }

        .box-more-promotion {
            background-color:white;
            border-radius: 10px;
            overflow: hidden;
            border: 1px solid rgb(7, 171, 226);
        }

        .box-more-promotion-title {
            font-size: 14px;
            width: 100%;
            padding: 10px;
            background-color: #dee8fc;
            color: rgb(7, 171, 226);
        }

        .box-more-promotion-content {
            min-height: fit-content;
            transition: min-height 1s ease;
            padding: 10px 10px 5px 10px;
            display: flex;
            gap: 5px;
        }

        .box-more-promotion-content-✓ {
            width: 15px;
            height: 15px;
            text-align: center;
            font-size: 10px;
            border-radius: 50%;
            font-weight: 600;
            background-color: #5cb85c;
            color: white;
        }
        .box-more-promotion-content-detailt {
            width: calc(100% - 25px);
            font-size: 12px;
        }

        .jKLiJX {
            background: rgb(255, 255, 255);
            padding: 10px;
            border-radius: 4px;
            color: rgb(36, 36, 36);
            font-weight: 400;
            font-size: 13px;
            margin-bottom: 12px;
            position: sticky;
            top: 20px;
            z-index: 99;
            display: flex;
            -webkit-box-align: center;
            align-items: center;
        }
            .jKLiJX div {
                text-align: center;
            }

        .checkbox-fake {
            height: 18px;
            border: 1px solid rgb(7, 171, 226);
            border-radius: 4px;
            display: inline-block;
            vertical-align: middle;
            vertical-align: middle !important;
            position: relative;
            z-index: 1;
            color: white;
            font-size: 15px;
            font-weight: 900;
            text-align: center;
            cursor: pointer;
            background-color: transparent;
        }    
    </style>
</head>

<body style="background-color: #efefef;">
    <div class="body-detailt">
        <div class="main-title">
            <h1>GIỎ HÀNG</h1>
        </div>
        <div class="slim-line">
        </div>

        <div class="basket-detailt-main row">
            <div class="col-md-8 col-sm-12 menu">
                <div class="jKLiJX">
                    <div style="width: 18px;" class="checkbox-fake">
                        <div style="margin-top:-3px;">
                            ✓
                        </div>
                    </div>
                    <div style="width:150px;">
                        Tất cả (1 sản phẩm)
                    </div>
                    <div style="flex: 1.5;">
                        Đơn giá
                    </div>
                    <div style="flex: 1;">
                        Số lượng
                    </div>
                    <div style="flex: 1;">
                        Thành tiền
                    </div>
                    <div style="width: auto">
                        <i data-toggle="tooltip" data-placement="bottom" title="Xóa mục đã chọn" style="font-size: 18px; cursor: pointer;" class="fa-regular fa-trash-can"></i>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-12">
                <div class="box-more-promotion">
                    <div class="box-more-promotion-title">
                        ƯU ĐÃI THÊM TỪ SEAFOOD
                    </div>
                    @foreach (var item in listSeafoodPromotion)
                    {
                        <div class="box-more-promotion-content">
                            <div class="box-more-promotion-content-✓">
                                ✓
                            </div>
                            <div class="box-more-promotion-content-detailt">
                                @item.Content
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
    </script>
</body>
</html>
