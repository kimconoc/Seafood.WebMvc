@using Domain.Constant
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/css/demo/OrderDetail.css" rel="stylesheet" />
    <style>
        .container-OrderDetail {
            color: #4a4a4a;
            font-size: 1em;
            font-weight: 400;
            line-height: 1.5;
            width: 100%;
            max-width: 1100px;
            margin-left: auto;
            margin-right: auto;
            padding: 0 5px 0 5px;
        }
        .box-heading {
            font-size: 18px;
            font-weight: 300;
            margin: 20px 0px 0px;
            display: flex;
            -webkit-box-align: center;
            align-items: center;
        }
        .box-head-title {
            border-radius: 8px 8px 0 0;
            margin-top:10px;
            font-size: 15px;
            width: 100%;
            padding: 10px;
            background-color: #dee8fc;
            color: rgb(7, 171, 226);
            justify-content: space-between;
            display: flex;
        }
        .box-main-content {
            background-color: rgb(255, 255, 255);
            min-height: fit-content;
            transition: min-height 1s ease;
            padding: 10px 10px 5px 10px;
            display: flex ;
            flex-flow: row ;
            gap: 5px;
        }
            .box-main-content .grid-notification {
                width: 100%;
                display: grid;
                grid-template-columns: 150px auto;
            }

                .box-main-content .grid-notification .grid-item {
                    margin-bottom: 5px;
                    font-size: 14px;
                    text-align: start;
                }

        .row-column1 {
            padding-right: 6px ;
        }

        .row-column2 {
            padding-right: 3px ;
            padding-left: 3px ;
        }

        .row-column3 {
            padding-left: 6px ;
        }

        .row .box-head-title {
            background-color: white;
            color: rgb(36, 36, 36);
        }

        .row .box-main-content {
            margin-top: 2px;
            flex-flow: column;
            height:135px;
        }

            .row .box-main-content .name {
                color: rgb(36, 36, 36);
                font-weight: bold;
            }

            .row .box-main-content strong {
                color: rgb(7, 171, 226);
            }

        .box-prod-order {
            margin-top: 12px;
            background: rgb(255, 255, 255);
            border-radius: 4px;
            font-size: 13px;
            margin-bottom: 20px;
            padding: 16px;
        }

            .box-prod-order .status-prod {
                border-bottom: 1px solid rgb(235, 235, 240);
                padding-bottom: 12px;
                color: rgb(128, 128, 137);
                font-size: 14px;
                font-weight: 500;
                line-height: 20px;
            }

                .box-prod-order .status-prod .main-status {
                    margin-left: 5px;
                    font-size: 15px;
                    font-weight: 600;
                }

            .box-prod-order .product {
                display: flex;
                flex-direction: row;
                padding: 16px 0px;
                border-bottom: 1px solid rgb(235, 235, 240);
                -webkit-box-pack: justify;
                justify-content: space-between;
            }

                .box-prod-order .product .detail {
                    display: flex;
                    gap: 10px;
                }

                .box-prod-order .product .prod-price {
                    font-size: 15px;
                }

                .box-prod-order .product .detail .quantity {
                    position: relative;
                }

                    .box-prod-order .product .detail .quantity img {
                        flex-shrink: 0;
                        width: 80px;
                        height: 80px;
                        border-radius: 4px;
                        border: 0.5px solid rgb(238, 238, 238);
                        background-repeat: no-repeat;
                        background-size: 90%;
                        background-position: center center;
                        position: relative;
                    }

                    .box-prod-order .product .detail .quantity span {
                        font-size: 12px;
                        line-height: 16px;
                        font-weight: 400;
                        color: rgb(7, 171, 226);
                        text-align: center;
                        position: absolute;
                        width: 28px;
                        height: 28px;
                        background-color: rgb(235, 235, 240);
                        display: flex;
                        -webkit-box-pack: center;
                        justify-content: center;
                        -webkit-box-align: center;
                        align-items: center;
                        right: 0px;
                        bottom: 0px;
                        border-top-left-radius: 10px;
                    }

            .box-prod-order .total-price {
                /*Đưa vào cuối hàng*/
                display: flex;
                flex-flow: column;
                align-items: flex-end;
                margin-top: 12px;
                width: 100%;
            }

                .box-prod-order .total-price .content {
                    display: flex;
                    gap: 5px;
                }

                .box-prod-order .total-price .click-continue {
                    display: flex;
                }

                .box-prod-order .total-price .content span {
                    font-size: 16px;
                }

                .box-prod-order .total-price .content strong {
                    font-size: 16px;
                    color: #d70018;
                }

                .box-prod-order .total-price .click-continue button {
                    margin-top:8px;
                    padding: 12px 8px;
                    height: 36px;
                    border-radius: 4px;
                    border: 1px solid rgb(7, 171, 226);
                    font-size: 14px;
                    font-weight: 400;
                    line-height: 1.4;
                    color: rgb(7, 171, 226);
                    display: flex;
                    -webkit-box-pack: center;
                    justify-content: center;
                    -webkit-box-align: center;
                    align-items: center;
                    cursor: pointer;
                    margin-left: 8px;
                }

        /*ghi đè class*/
    </style>
</head>

<body>
    <div class="container-OrderDetail">
        <div class="main-title">
            <h1>CHI TIẾT ĐƠN HÀNG</h1>
        </div>
        <div class="slim-line">
        </div>
        <div class="box-heading">
            <span class="status">
                @string.Format("Đơn hàng #405353962 - ")
                <strong>
                    Giao hàng thành công
                </strong>
            </span>
        </div>
        <div class="box-head-title">
            Thông báo
        </div>
        <div class="box-main-content">
            <div class="grid-notification">
                <div class="grid-item">
                    16:11 19/08/2019
                </div>
                <div class="grid-item">
                    Thời gian quý khách đã đặt hàng.
                </div>
                <div class="grid-item">
                    08:03 21/08/2019
                </div>
                <div class="grid-item">
                    Chúng tôi vừa bàn giao đơn hàng của quý khách đến đối tác vận chuyển của
                    <strong>
                        Sheafood.
                    </strong>
                    Đơn hàng của quý khách sẽ được giao trong ngày hôm nay 22/08/2019.
                </div>
                <div class="grid-item">
                    09:02 22/08/2019
                </div>
                <div class="grid-item">
                    <strong>
                        Sheafood.
                    </strong>
                    Giao hàng thành công!
                </div>
            </div>
        </div>
        <div class="row">
            <div class="row-column1 col-md-4 col-sm-12 menu">
                <div class="box-head-title">
                    Địa chỉ người nhận
                </div>
                <div class="box-main-content">
                    <div class="name">
                        Phạm Văn Đức
                    </div>
                    <div class="address">
                        <span>Địa chỉ: </span>
                        <strong>Văn phòng</strong>
                        Số nhà 11 ngõ 298/77/39 đường Ngọc Hồi, Xã Tam Hiệp, Huyện Thanh Trì, Hà Nội, Việt Nam
                    </div>
                    <div class="number-phone">
                        <span>Số điện thoại: </span>
                        0367823445
                    </div>
                </div>

            </div>
            <div class="row-column2 col-md-4 col-sm-12">
                <div class="box-head-title">
                    Hình thức giao hàng
                </div>
                <div class="box-main-content">
                    <div>
                        <strong>
                            Seafood
                        </strong>
                        Giao hàng
                    </div>
                    <div>
                        dự tính hàng được giao vào: Thứ ba, 27/08/2022
                    </div>
                </div>
            </div>
            <div class="row-column3 col-md-4 col-sm-12">
                <div class="box-head-title">
                    Hình thức thanh toán
                </div>
                <div class="box-main-content">
                    <div>
                        Thanh toán tiền mặt khi nhận hàng
                    </div>
                </div>
            </div>
        </div>

        <div class="box-prod-order">
            <div class="status-prod">
                <i class="fa fa-truck" aria-hidden="true"></i>
                <span class="main-status">Đang vận chuyển</span>
            </div>
            <div class="product">
                <div class="detail">
                    <div class="quantity">
                        <img src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/4/h/4h43.png" alt="Alternate Text" />
                        <span>x2</span>
                    </div>
                    <div>
                        <div class="name-prod">
                            <strong>Loại tôm 1kg 40</strong>
                        </div>
                        <span>
                            Chế biến lẩu
                        </span>
                    </div>
                </div>
                <span class="prod-price">
                    210.000 đ
                </span>
            </div>
            <div class="product">
                <div class="detail">
                    <div class="quantity">
                        <img src="https://cdn2.cellphones.com.vn/358x/media/catalog/product/4/h/4h43.png" alt="Alternate Text" />
                        <span>x1</span>
                    </div>
                    <div>
                        <div class="name-prod">
                            <strong>Loại tôm 1kg 40</strong>
                        </div>
                        <span>
                            Chế biến nướng
                        </span>
                    </div>
                </div>
                <span class="prod-price">
                    210.000 đ
                </span>
            </div>
            <div class="total-price">
                <div class="content">
                    <span>
                        Tổng tiền:
                    </span>
                    <strong>
                        459.000 đ
                    </strong>
                </div>
                <div class="click-continue">
                    <button>Mua lại</button>
                </div>
            </div>
        </div>

    </div>

    <script>
        //Setup
        //Setup
    </script>           
</body>
</html>
